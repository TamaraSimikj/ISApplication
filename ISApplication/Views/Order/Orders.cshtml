<h4>Orders</h4>

<table class="table">
    <thead>
    <tr>
        <th scope="col">Username</th>
        <th scope="col">Products Quantity</th>
        <th scope="col">Details</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var elem in Model) { 
        <tr>
            <td>@elem.User.Email</td>
            <td>@elem.ProductInOrders.Count</td>
            <td>
                <div class="btn-group">
                    <button type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        Action
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-controller="Order" asp-action="Details" asp-route-id="@elem.Id">Details</a></li>
                        <li><a class="dropdown-item" asp-controller="Order" asp-action="CreateInvoice" asp-route-id="@elem.Id">Create Invoice</a></li>
                    </ul>
                </div>
            </td>
        </tr>
    }
    </tbody>

</table>